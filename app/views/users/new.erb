<h1>Registration</h1>

<%= form_for @user do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :nationality %>
  <%= f.text_field :nationality %>
</p>
<p>
  <%= f.label :password %>
  <%= f.password_field :password %>
</p>
  <%= f.submit %>
<% end %>